<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body style="background-color: #282c34; color: rgb(216, 227, 221); display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh;">
    <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh;">
        <h2><%= message %></h2>
        <form id="loginForm" method="POST">
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" style="margin-top: 10px; padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px;">Login</button>
        </form>
        <p id="message"></p>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const messageEl = document.getElementById('message');
            
            try {
                const response = await fetch('/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email, password })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    // Store token in localStorage and as a cookie
                    localStorage.setItem('token', data.token);
                    document.cookie = `token=${data.token}; path=/`;
                    messageEl.style.color = '#28a745';
                    messageEl.textContent = 'Login successful! Redirecting...';
                    
                    // Redirect to welcome page after 1 second
                    setTimeout(() => {
                        window.location.href = '/user/welcome';
                    }, 1000);
                } else {
                    messageEl.style.color = '#dc3545';
                    messageEl.textContent = data.message || 'Login failed';
                }
            } catch (error) {
                messageEl.style.color = '#dc3545';
                messageEl.textContent = 'An error occurred';
                console.error('Error:', error);
            }
        });
    </script>
</body>
</html>